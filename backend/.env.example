# ============================================
# Gemellery Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file!
# ============================================

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=gemellery

# JWT Secret (use a strong random string)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ============================================
# AI Jewelry Designer Feature (Phase 2)
# ============================================

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Storage
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_bucket_name.appspot.com
FIREBASE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
